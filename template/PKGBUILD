# Maintainer: Hoàng Văn Khải <hvksmr1996@gmail.com>

_crate=CRATE
pkgname="rust-$_crate"
pkgver=VERSION
pkgrel='1'
arch=('x86_64')
license=('custom')
makedepends=('rustup' 'gcc' 'llvm')
_binaries=(BINARIES)

build() {
  cargo +nightly install \
    --all-features --force \
    --root "$srcdir" \
    --version "$pkgver" \
    --locked \
    "$_crate"
}

package() {
  for binary_name in "${_binaries[@]}"; do
    msg2 "$binary_name"
    install -Dm755 "$srcdir/bin/$binary_name" "$pkgdir/usr/bin/$binary_name"
  done
}
